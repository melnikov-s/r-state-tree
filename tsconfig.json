{
	"extends": "@tsmetadata/polyfill/lib/tsconfig.polyfill.json",
	"compilerOptions": {
		"rootDir": "src",
		"target": "es2022",
		"alwaysStrict": true,
		"sourceMap": false,
		"removeComments": true,
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"lib": ["es2022"],
		"types": ["vitest/globals"],
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"declaration": true,
		"declarationDir": "./lib",
		"outDir": "./dist",
		"moduleResolution": "Node"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
