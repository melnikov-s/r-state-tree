{
	"compilerOptions": {
		"experimentalDecorators": true,
		"rootDir": "src",
		"target": "es2020",
		"alwaysStrict": true,
		"sourceMap": false,
		"removeComments": true,
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"lib": ["es2020", "dom"],
		"types": ["vitest/globals"],
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"declaration": true,
		"declarationDir": "./dist",
		"outDir": "./dist",
		"moduleResolution": "bundler"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
