{
	"compilerOptions": {
		"experimentalDecorators": true,
		"rootDir": "src",
		"target": "es2015",
		"alwaysStrict": true,
		"sourceMap": false,
		"removeComments": true,
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"lib": ["es2015"],
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"declaration": true,
		"suppressImplicitAnyIndexErrors": true,
		"declarationDir": "./lib",
		"outDir": "./dist",
		"moduleResolution": "Node"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
